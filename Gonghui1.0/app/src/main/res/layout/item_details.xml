<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_list_selector_outside"
        android:duplicateParentState="true"
        android:orientation="vertical"
        android:paddingTop="10dp">



        <ScrollView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/above_top_group"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dip"
                    android:layout_marginTop="5dip"
                    android:background="#808080"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/top_group"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/head_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:src="@mipmap/circle_gray" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activityname"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:ellipsize="end"
                            android:paddingBottom="2dp"
                            android:singleLine="true"
                            android:text="@string/activityname"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/pulisher_name"
                                android:layout_width="85dp"
                                android:layout_height="18dp"
                                android:text="未命名"
                                android:singleLine="true"
                                android:ellipsize="middle"
                                android:textColor="@color/blue"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/public_time"
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text="07-13 15:14"
                                android:textColor="#808080"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="18dp"
                                android:text="发布"
                                android:textColor="@color/lightblue"
                                android:textSize="13sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/delete_message"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.6"
                        android:src="@drawable/delete"
                        android:visibility="visible" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bellow_top_group"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5dip"
                    android:background="#808080"
                    android:orientation="horizontal" />

                <include
                    layout="@layout/item_details_describe_components"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"

                    >
                </include>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_above="@+id/botton_group"
            android:background="#808080"
            android:orientation="horizontal" />


        <LinearLayout
            android:id="@+id/botton_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_line"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/lightblue"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/phone_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dip"
                android:layout_weight="1"
                android:drawableTop="@mipmap/good"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:paddingTop="5dip"
                android:text="点赞"
                android:textColor="#000000"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#808080"
                android:orientation="horizontal" />


            <TextView
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/pinglun"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:paddingTop="5dip"
                android:text="评论"
                android:textColor="#000000"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#808080"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/attend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/attend"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:paddingTop="5dip"
                android:text="加入"
                android:textColor="#000000"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="#808080"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/shoucang"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:paddingTop="5dip"
                android:text="收藏"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="#808080"
            android:orientation="horizontal" />
    </RelativeLayout>

</LinearLayout>
